# Environment Configuration for Self-Deployment
# Copy this file to .env and customize for your deployment

# Application Settings
NODE_ENV=production
APP_PORT=3000
APP_HOST=0.0.0.0

# Database Configuration (Self-Hosted PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/famousai
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration (Self-Hosted Cache)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Storage Configuration (Self-Hosted - choose one)
# Option 1: Local filesystem
STORAGE_TYPE=local
STORAGE_PATH=/app/data/uploads

# Option 2: Self-hosted MinIO (S3-compatible)
# STORAGE_TYPE=minio
# MINIO_ENDPOINT=localhost:9000
# MINIO_ACCESS_KEY=your-access-key
# MINIO_SECRET_KEY=your-secret-key
# MINIO_BUCKET=famousai-uploads
# MINIO_USE_SSL=false

# Authentication (Self-Managed)
JWT_SECRET=change-this-to-a-random-secret-key
JWT_EXPIRATION=7d
SESSION_SECRET=change-this-to-another-random-secret

# OAuth (Optional - use your own OAuth provider)
# OAUTH_GITHUB_CLIENT_ID=
# OAUTH_GITHUB_CLIENT_SECRET=
# OAUTH_GOOGLE_CLIENT_ID=
# OAUTH_GOOGLE_CLIENT_SECRET=

# Email Configuration (Self-Hosted SMTP)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@yourdomain.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring (Optional - Self-Hosted)
# ENABLE_METRICS=true
# METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/app/backups

# Features Flags (No External Services Required)
ENABLE_API=true
ENABLE_WEB_UI=true
ENABLE_FILE_UPLOAD=true
ENABLE_CACHING=true

# No Famous.ai Dependencies
# No external API keys required
# All services are self-hosted and under your control
